<Window x:Class="Game_On.Views.FenetrePrincipale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_On.Views"
        mc:Ignorable="d"
        Title="FenetrePrincipale" Height="450" Width="800">

    <DockPanel>
        <StackPanel x:Name="barregestion" Orientation="Horizontal" DockPanel.Dock="Top" Visibility="Visible">

            <Button x:Name="btn_Admin" Content="Administration" Height="40" Width="100" Margin="90,0,0,0"/>
            <Button  Content="Deconnexion" Height="40"  Width="100" Margin="400,0,0,0" Click="Button_Deconnexion" />

        </StackPanel>
        
        <Grid>
            <local:PageConnexion x:Name="Connexion" Visibility="Visible"/>
            <local:PageInscription x:Name="Inscription" Visibility="Collapsed"/>
            <local:FenetreJeu x:Name="Jeu" Visibility="Collapsed"/>
        </Grid>
    </DockPanel>
</Window>
