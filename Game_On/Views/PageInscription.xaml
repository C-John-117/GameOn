<UserControl x:Class="Game_On.Views.PageInscription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game_On.Views"
             xmlns:viewmodel="clr-namespace:Game_On.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodel:UtilisateurVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="AliceBlue">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Margin="10" Content="Nom: " FontSize="15" />
            <TextBox Grid.Column="1" Width="175" Margin="10" Text="{Binding NomUtilisateur}"/>

        </Grid>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Margin="10" Content="Prenom: " FontSize="15" />
            <TextBox Grid.Column="1" Width="175" Margin="10" Text="{Binding PrenomUtilisateur}"/>

        </Grid>

        <Grid Grid.Row="2">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Margin="10" Content="Email: " FontSize="15" />
            <TextBox Grid.Column="1" Width="175" Margin="10" Text="{Binding Email}" />

        </Grid>

        <Grid Grid.Row="3">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Margin="10" Content="Pseudo: " FontSize="15" />
            <TextBox Grid.Column="1" Width="175" Margin="10" Text="{Binding Pseudo}" />

        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Margin="10" Grid.Column="0" Content="Mot de passe: " FontSize="15"/>
            <PasswordBox Grid.Column="1" Width="175" Margin="10" PasswordChar="*" PasswordChanged="Pwd_PasswordChanged" />
        </Grid>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Click="btn_retour_Click" Content="Retour" x:Name="btn_retour" Grid.Column="0" Height="30" Margin="10,0"/>
            <Button Click="btn_inscription_Click" Content="S'inscrire" x:Name="btn_inscription" Grid.Column="1" Height="30" Margin="10,0" Command="{Binding InscriptionCommand}"/>
        </Grid>
    </Grid>
</UserControl>
