<UserControl x:Class="Game_On.Views.FenetreJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game_On.Views"
              Background="{StaticResource BackgroundColor}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel LastChildFill="True" Margin="10">
        <Border Background="{StaticResource SurfaceColor}"
                CornerRadius="20"
                Padding="20"
                Effect="{DynamicResource CardShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Viewbox Grid.Row="0" Stretch="Uniform" Margin="10">
                    <Grid x:Name="SudokuGrid"/>
                </Viewbox>

                <StackPanel Grid.Row="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="BtnNote"
                            Content="✏️ Mode Note"
                            Width="220" Height="45"
                            Click="BtnNote_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel DockPanel.Dock="Right" 
                    VerticalAlignment="Center" 
                    Orientation="Vertical"
                    Margin="10">
            <Button x:Name="btn_Reset" 
                    Click="btn_Reset_Click" 
                    Content="Reset"
                    Width="200" Height="45"/>
        </StackPanel>
        
    </DockPanel>
</UserControl>
